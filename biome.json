{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./node_modules/@vikejs/biome-config/config.json"],
  "files": {
    "includes": [
      "**",
      "!**/.vercel",
      "!**/.wrangler",
      "!**/worker-configuration.d.ts"
    ]
  },
  "overrides": [
    {
      "includes": ["example/**", "docs/**"],
      "linter": {
        "rules": {
          "a11y": "off",
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        },
        "domains": {
          "react": "recommended"
        }
      }
    }
  ]
}
